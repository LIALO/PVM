<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapa_frag"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/list_view_contenedor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- List View -->

        <ListView
            android:id="@+id/lvNegocios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedor_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C6700"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/busquedaAvanzada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración Opciones de Búsqueda"
                android:textAppearance="?android:attr/textAppearanceLarge" />

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/menuItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia de Búsqueda:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDistancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>
			    <SeekBar
                    android:id="@+id/sbDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/horario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limite de Precio:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/sbPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostrar Resultados en:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginTop="10dp" />

                <RadioGroup
                    android:id="@+id/rgDesplegarRB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rbMapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mapa"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rbLista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista" 
                        android:textStyle="bold"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btGuardarBA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llNegociosB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvNegociosB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_row_selector" >
        </ListView>
    </LinearLayout>
<LinearLayout
    android:id="@+id/vistaNegocio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <ScrollView
      android:id="@+id/scrollView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:padding="8dp" 
          android:orientation="vertical">

          <com.android.volley.toolbox.NetworkImageView
              android:id="@+id/vistaImg"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginRight="8dp" />

          <TextView
              android:id="@+id/vistaNom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/title"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/vistaSlog"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dip"
              android:textSize="@dimen/rating" />

          <TextView
              android:id="@+id/vistaDireccion"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:textColor="@color/genre"
              android:textSize="@dimen/genre" />

          <TextView
              android:id="@+id/vistaUrlNegocio"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/year"
              android:textSize="@dimen/year" />

	   <TableLayout 
	    android:id="@+id/TablaM"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:stretchColumns="1" >
  
		</TableLayout>

	    <TableLayout 
	    android:id="@+id/TablaH"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:stretchColumns="1" >
	 
		    <TableRow
		        android:id="@+id/SeparadorCabecera1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		 
		        <FrameLayout
		            android:id="@+id/LineaCabecera1"
		            android:layout_width="fill_parent"
		            android:layout_height="2dp"
		            android:layout_span="3"
		            android:background="#FFFFFF" >
		        </FrameLayout>
		    </TableRow>
	    
		    <TableRow
		        android:id="@+id/TituloTabla1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >	
		            <TextView
			            android:id="@+id/TituloHorario1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:padding="10dp"
			            android:text="Horario"
			            android:textColor="#005500"
			            android:textSize="26sp" />
		    </TableRow>
		    
	        <TableRow
		        android:id="@+id/SeparadorCabecera2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		 
		        <FrameLayout
		            android:id="@+id/LineaCabecera2"
		            android:layout_width="fill_parent"
		            android:layout_height="2dp"
		            android:layout_span="3"
		            android:background="#FFFFFF" >
		        </FrameLayout>
	        
	   	 	</TableRow>
	    
		   <TableRow
		        android:id="@+id/Cabecera2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:id="@+id/ColumnaDia"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="15dp"
		            android:text="Día"
		            android:textColor="#005500"
		            android:textSize="26sp" />
		       
		        <TextView
		            android:id="@+id/ColumnaHoraA"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:padding="15dp"
		            android:text="Hora que abre"
		            android:textColor="#005500"
		            android:textSize="26sp" />
		 
		        <TextView
		            android:id="@+id/ColumnaHoraC"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="15dp"
		            android:text="Hora que cierra"
		            android:textColor="#005500"
		            android:textSize="26sp" />
	
		    </TableRow>
	
		</TableLayout>

      
      <LinearLayout android:layout_width="match_parent" 
          android:layout_height="wrap_content" 
          android:orientation="vertical">

	      <Button android:id="@+id/backVistaNeg" 
	          style="?android:attr/buttonStyleSmall" 
	          android:layout_width="fill_parent" 
	          android:layout_height="wrap_content" 
	          android:text="Atrás" 
	          android:layout_gravity="center" />

 	 </LinearLayout>
  
     </LinearLayout>
  </ScrollView>

  

</LinearLayout>
</LinearLayout>