<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapa_frag"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

     <!-- List View Tipos de Negocios-->
    <LinearLayout
        android:id="@+id/mapa_llTiposNegocios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- List View -->

        <ListView
            android:id="@+id/lvNegocios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    
    <!-- Contendor Mapa --> 
    <LinearLayout
        android:id="@+id/contenedor_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C6700"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Vista Configuraciones -->
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 		
        <LinearLayout
            android:id="@+id/mapa_busquedaAvanzada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración Opciones de Búsqueda"
                android:textAppearance="?android:attr/textAppearanceLarge" />

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/menuItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia de Búsqueda:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDistancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>
			    <SeekBar
                    android:id="@+id/sbDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="40"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/horario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Limite de Precio:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/sbPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:max="50"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btGuardarBA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:padding="10dp"
                    android:textColor="#5aaca5"
                     android:background="@drawable/rounded_corner2"  />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

<!-- Vista Completa del Negocio --> 
<LinearLayout
    android:id="@+id/mapa_vistaNegocio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <ScrollView
      android:id="@+id/scrollView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:padding="8dp" 
          android:orientation="vertical">

          <com.android.volley.toolbox.NetworkImageView
              android:id="@+id/vistaImg"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginRight="8dp" />

          <TextView
              android:id="@+id/vistaNom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/nombreNeg"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/vistaSlog"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dip"
              android:textSize="@dimen/slogan" />

          <TextView
              android:id="@+id/vistaDireccion"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:textColor="@color/vista"
              android:textSize="@dimen/direccion" />

          <TextView
              android:id="@+id/vistaTelefonoNegocio"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/vista"
              android:textSize="@dimen/telefono" />

	   <TableLayout 
	    android:id="@+id/TablaM"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:stretchColumns="1" >
  
		</TableLayout>

	    <TableLayout 
	    android:id="@+id/TablaH"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:stretchColumns="1" >
	 
		    <TableRow
		        android:id="@+id/SeparadorCabecera1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		 
		        <FrameLayout
		            android:id="@+id/LineaCabecera1"
		            android:layout_width="fill_parent"
		            android:layout_height="2dp"
		            android:layout_span="3"
		            android:background="#FFFFFF" >
		        </FrameLayout>
		    </TableRow>
	    
		    <TableRow
		        android:id="@+id/TituloTabla1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >	
		            <TextView
			            android:id="@+id/TituloHorario1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:padding="10dp"
			            android:text="Horario"
			            android:textColor="#005500"
			            android:textSize="26sp" />
		    </TableRow>
		    
	        <TableRow
		        android:id="@+id/SeparadorCabecera2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		 
		        <FrameLayout
		            android:id="@+id/LineaCabecera2"
		            android:layout_width="fill_parent"
		            android:layout_height="2dp"
		            android:layout_span="3"
		            android:background="#FFFFFF" >
		        </FrameLayout>
	        
	   	 	</TableRow>
	    
		   <TableRow
		        android:id="@+id/Cabecera2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		
		        <TextView
		            android:id="@+id/ColumnaDia"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="15dp"
		            android:text="Día"
		            android:textColor="#005500"
		            android:textSize="26sp" />
		       
		        <TextView
		            android:id="@+id/ColumnaHoraA"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:padding="15dp"
		            android:text="Hora que abre"
		            android:textColor="#005500"
		            android:textSize="26sp" />
		 
		        <TextView
		            android:id="@+id/ColumnaHoraC"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:padding="15dp"
		            android:text="Hora que cierra"
		            android:textColor="#005500"
		            android:textSize="26sp" />
	
		    </TableRow>
	
		</TableLayout>
  
     </LinearLayout>
  </ScrollView>

  

</LinearLayout>
</LinearLayout>